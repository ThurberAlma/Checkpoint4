@model IEnumerable<Checkpoint4.Models.Instrument>


<h2>Rentals</h2>
<style>
    h4 {
        margin-top: 0;
        width: 100%;
    }
</style>

<div class="container-fluid" style="background-color: #ffffff">

    <!-- First Row -->
    <div class="row" style="height:auto;">

        @foreach (var item in Model)
        {
            <div class="col-sm-4">
                <div class="container-fluid">
                    <div class="card" style="width:100%; height: auto: float:right; margin: 10px; border: solid 2px black;">
                        <a href="@Url.Action("ShowInstrument", "Instrument", new { iID = item.InstID }, null)">
                            <img class="card-title" src="@item.InstImg" style="width: 100%; height: 380px" />
                            <div class="card-body">
                                <h4 class="card-title btn btn-primary">@item.InstType @item.InstDesc</h4>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        }

    </div>
</div>

